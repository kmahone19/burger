<div class="jumbotron jumbotron-fluid p-5">
  <h1> Burger App!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-3">
      <form id="burger-form">
        <input id="name" class="form-control" placeholder="Burger Name">
        <button class="btn btn-block" type="submit">Add Burger!</button>
      </form>
    </div>
    <div class="col-12 col-md-9">
      <div class="row">
        <div class="col-12 col-md-6">
          <h3>Burgers Not Eaten Yet!</h3>
          <ul class="list-group">
            {{#each burgerData}}
            {{#unless devoure}}
            <li class="list-group-item d-flex">
              {{burger_name}}
              <span class="ml-auto">
                <button data-id="{{id}}" data-devoure="false" class="btn btn-sm eat-burger">
                  Eat Burger!
                </button>
              </span>
            </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        <div class="col-12 col-md-6">
          <h3>Burgers That Have Been Eaten!</h3>
          <ul class="list-group">
            {{#each burgerData}}
            {{<div id="if"></div> devoure}}
            <li class="list-group-item d-flex">
              {{burger_name}}
              <span class="ml-auto">
                <button data-id="{{id}}" data-devoure="false" class="btn btn-sm eat-burger">
                  Make Another One!
                </button>
              </span>
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>